@page "/scriptInput/{id?}"
@using Client.Services;
@using global::Shared.Entities;
@inject IGradeService GradeService;


<PageTitle> Choose Type </PageTitle>


<EditForm Model="@script">
    <InputTextArea @bind-Value="script" id="scriptInput" />
</EditForm>

@code {

    [Parameter]
    public int? Id { get; set; }
    public GradeKey? Key { get; set; }
    string script = string.Empty;

    protected override void OnInitialized()
    {
        Key = GradeService.GetGradeKeyById(Id);

        if (Key == null)
        {
            Key = new GradeKey();
        }
    }
}